    ESPButton.MouseButton1Click:Connect(function()
        CONFIG.ESPEnabled = not CONFIG.ESPEnabled
        UpdateUIStatus()
    end)

    -- ✅ FOV Input
    FOVInput.FocusLost:Connect(function()
        local value = tonumber(FOVInput.Text)
        if value then
            value = math.clamp(value, 50, 180)
            CONFIG.FOVRadius = value
            FOVInput.Text = tostring(value)
            FOVLabel.Text = "FOV: " .. CONFIG.FOVRadius
            UpdateFOVCircle()
        else
            FOVInput.Text = tostring(CONFIG.FOVRadius)
        end
    end)

    -- ✅ Smoothing Input
    SmoothingInput.FocusLost:Connect(function()
        local value = tonumber(SmoothingInput.Text)
        if value then
            value = math.clamp(value, 0.1, 1.0)
            CONFIG.AimbotSmoothing = value
            SmoothingInput.Text = string.format("%.2f", value)
            SmoothingLabel.Text = "Smooth: " .. string.format("%.2f", CONFIG.AimbotSmoothing)
        else
            SmoothingInput.Text = string.format("%.2f", CONFIG.AimbotSmoothing)
        end
    end)

    -- ✅ Head Offset Input
    HeadOffsetInput.FocusLost:Connect(function()
        local value = tonumber(HeadOffsetInput.Text)
        if value then
            value = math.clamp(value, -2.0, 2.0)
            CONFIG.HeadOffsetY = value
            HeadOffsetInput.Text = string.format("%.2f", value)
            HeadOffsetLabel.Text = "Offset: " .. string.format("%.1f", CONFIG.HeadOffsetY)
        else
            HeadOffsetInput.Text = string.format("%.2f", CONFIG.HeadOffsetY)
        end
    end)

    UpdateUIStatus()
end

CreateUI()

--// ════════════════════════════════════════
--// TECLADO
--// ════════════════════════════════════════

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == Enum.KeyCode.Five then
        CONFIG.AimbotEnabled = not CONFIG.AimbotEnabled
        
        if CONFIG.AimbotEnabled then
            if not ZombieFolder then
                ZombieFolder = FindZombieFolder()
            end
            if ZombieFolder then
                StartAimbot()
            end
        else
            StopAimbot()
        end
        
        UpdateUIStatus()
    end
    
    if input.KeyCode == Enum.KeyCode.Six then
        CONFIG.ESPEnabled = not CONFIG.ESPEnabled
        UpdateUIStatus()
    end
end)

